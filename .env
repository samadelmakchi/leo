# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Flask Configuration
SECRET_KEY=your-very-secure-production-secret-key-change-in-production-12345
FLASK_ENV=production                   # production, development, testing
FLASK_DEBUG=0                          # 0=disable, 1=enable
FLASK_HOST=0.0.0.0                     # Binding host
FLASK_PORT=5000                        # Application port
APP_NAME=Docker Management System      # Application name
APP_VERSION=1.0.0                      # Application version

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-API-Key,X-Requested-With
CORS_EXPOSE_HEADERS=Content-Range,X-Total-Count
CORS_SUPPORTS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_DAY=200
RATE_LIMIT_PER_HOUR=50
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_STRATEGY=fixed-window       # fixed-window, moving-window
RATE_LIMIT_STORAGE=memory              # memory, redis

# API Security
API_KEY_REQUIRED=false                 # Require API key for all endpoints
API_KEY_HEADER=X-API-Key
DEFAULT_API_KEY=default-api-key-change-in-production

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache Type (simple, redis, memcached)
CACHE_TYPE=simple

# Redis Configuration (if using redis)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Cache Settings
CACHE_DEFAULT_TIMEOUT=300              # Default timeout in seconds
CACHE_THRESHOLD=1000                   # Maximum number of items in cache
CACHE_KEY_PREFIX=docker_management_

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log
LOG_ACCESS_FILE=logs/access.log
LOG_MAX_SIZE=10485760                  # 10MB in bytes
LOG_BACKUP_COUNT=10
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Console Logging
CONSOLE_LOG_ENABLED=true
CONSOLE_LOG_LEVEL=INFO

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================

# Docker Connection
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=10                      # Connection timeout in seconds
DOCKER_VERSION=auto                    # Docker API version
DOCKER_TLS_VERIFY=false                # Verify TLS certificates
DOCKER_CERT_PATH=                      # Path to TLS certificates

# Docker Monitoring
DOCKER_MONITOR_INTERVAL=60             # Monitoring interval in seconds
DOCKER_HEALTH_CHECK_INTERVAL=30        # Health check interval

# ============================================================================
# ANSIBLE CONFIGURATION
# ============================================================================

# Ansible Paths
ANSIBLE_INVENTORY_PATH=config/inventory.yml
ANSIBLE_PLAYBOOKS_DIR=playbooks
ANSIBLE_DEFAULT_PLAYBOOK=main.yml
ANSIBLE_CONFIG_FILE=ansible.cfg

# Ansible Execution
ANSIBLE_TIMEOUT=3600                   # Timeout for playbook execution
ANSIBLE_CHECK_MODE=false               # Run in check mode by default
ANSIBLE_VERBOSITY=1                    # 0-4 (0=minimal, 4=debug)
ANSIBLE_FORKS=5                        # Number of parallel processes

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Backup Paths
BACKUP_BASE_DIR=backups
BACKUP_LOG_DIR=logs/backup
BACKUP_TEMP_DIR=/tmp/backups

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7                # Days to keep backups
BACKUP_MAX_SIZE_GB=10                  # Maximum backup size per customer
BACKUP_COMPRESSION_LEVEL=6             # 1-9 (1=fast, 9=best)
BACKUP_ENCRYPTION_ENABLED=false
BACKUP_ENCRYPTION_KEY=                 # Encryption key if enabled

# Backup Schedule
BACKUP_SCHEDULE_ENABLED=true
BACKUP_SCHEDULE_TIME=02:00             # Daily backup time (HH:MM)
BACKUP_SCHEDULE_DAY_OF_WEEK=0          # 0=Sunday, 6=Saturday (for weekly)
BACKUP_NOTIFICATION_ENABLED=true

# ============================================================================
# DATABASE CONFIGURATION (For future use)
# ============================================================================

# SQLite (Default)
DATABASE_TYPE=sqlite
DATABASE_PATH=data/app.db

# PostgreSQL (Optional)
# DATABASE_TYPE=postgresql
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=docker_management
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres

# MySQL (Optional)
# DATABASE_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=docker_management
# MYSQL_USER=root
# MYSQL_PASSWORD=root

# ============================================================================
# EMAIL CONFIGURATION (For notifications)
# ============================================================================

EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60               # Seconds between checks
HEALTH_CHECK_TIMEOUT=5                 # Timeout per check

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9100                      # Port for metrics endpoint
METRICS_PATH=/metrics

# Alerting
ALERT_DISK_USAGE_THRESHOLD=90          # Percentage
ALERT_MEMORY_USAGE_THRESHOLD=85        # Percentage
ALERT_CPU_USAGE_THRESHOLD=80           # Percentage
ALERT_DOCKER_DOWN=true

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Frontend
UI_THEME=dark                          # dark, light, auto
UI_LANGUAGE=fa                         # fa, en
UI_TIMEZONE=Asia/Tehran                # System timezone
UI_REFRESH_INTERVAL=30                 # Auto-refresh interval in seconds

# Dashboard
DASHBOARD_MAX_CONTAINERS=20
DASHBOARD_MAX_IMAGES=20
DASHBOARD_MAX_LOGS=100
DASHBOARD_CHART_HISTORY_HOURS=24

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Session Management
SESSION_TYPE=filesystem                # filesystem, redis, memcached
SESSION_PERMANENT=false
SESSION_LIFETIME=3600                  # Session lifetime in seconds
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# File Uploads
MAX_CONTENT_LENGTH=16777216            # 16MB max file upload
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,log,yml,yaml,json,tar,gz,zip,sql

# Performance
WORKERS=4                              # Number of worker processes
THREADS=8                              # Number of threads per worker
WORKER_TIMEOUT=30                      # Worker timeout in seconds

# SSL/TLS (For production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Debug Features (Only for development)
DEBUG_TOOLBAR_ENABLED=false
DEBUG_SQL_QUERIES=false
DEBUG_PROFILER_ENABLED=false

# Mock Services (For testing without real services)
MOCK_DOCKER=false
MOCK_ANSIBLE=false
MOCK_CRON=false

# ============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# ============================================================================

# Production Overrides
# FLASK_ENV=production
# FLASK_DEBUG=0
# LOG_LEVEL=WARNING
# CACHE_TYPE=redis

# Development Overrides
# FLASK_ENV=development
# FLASK_DEBUG=1
# LOG_LEVEL=DEBUG
# CACHE_TYPE=simple
# CORS_ORIGINS=*
# RATE_LIMIT_ENABLED=false

# Testing Overrides
# FLASK_ENV=testing
# FLASK_DEBUG=0
# LOG_LEVEL=ERROR
# MOCK_DOCKER=true
# MOCK_ANSIBLE=true